<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rng.managedata.database.mybatis.mapper.customer.CustomerInfoMapper">

    <!-- 관리자 계정 카운트 조회 -->
    <select id="findByDto" parameterType="CustomerInfo" resultType="CustomerInfo">
        SELECT cti.*
        FROM tcustomer_info cti
        WHERE cti.del_status = false
        LIMIT #{firstIndex}, #{pageSize}
    </select>
    <select id="countByDto" parameterType="CustomerInfo" resultType="int">
        SELECT count(*)
        FROM tcustomer_info cti
        WHERE cti.del_status = false
    </select>
</mapper>